<?xml version="1.0"?>
<!-- Place this file to $FG ROOT/Protocol/ directory. -->

<PropertyList>
	<generic>

		<input>
			<binary_mode>false</binary_mode>
			<var_separator>tab</var_separator>
			<line_separator>newline</line_separator>

			<!-- Flight Controls quad copter -->	
			<chunk>
				<name>motor1</name>
				<type>float</type>
				<node>/controls/engines/engine[0]/throttle</node>
			</chunk>

			<chunk>
				<name>motor2</name>
				<type>float</type>
				<node>/controls/engines/engine[1]/throttle</node>
			</chunk> 

			<chunk>
				<name>motor3</name>
				<type>float</type>
				<node>/controls/engines/engine[2]/throttle</node>
			</chunk> 

			<chunk>
				<name>motor4</name>
				<type>float</type>
				<node>/controls/engines/engine[3]/throttle</node>
			</chunk>
		</input>

		<output>
			<binary_mode>true</binary_mode>
			<binary_footer>magic,0x4c56414d</binary_footer>

			<!-- ##### GPS ##### -->
			<chunk>
				<name>latitude</name>
				<type>float</type>
				<node>/position/latitude-deg</node>
			</chunk> 

			<chunk>
				<name>longitude</name>
				<type>float</type>
				<node>/position/longitude-deg</node>
			</chunk> 

			<chunk>
				<name>altitude_cm</name>
				<type>float</type>
				<node>/position/altitude-ft</node>
				<factor>30.48000000012192000000048768</factor>
			</chunk> 

			<chunk>
				<name>heading</name>
				<type>float</type>
				<node>/orientation/heading-deg</node>
			</chunk>
			
			<!-- ground course = atan(ve/vn), speed = sqrt((ve*ve) + (vn*vn)) -->
			<!--
			<chunk>
				<name>speed - north</name>
				<type>float</type>
				<node>/velocities/speed-north-fps</node>
			</chunk> 

			<chunk>
				<name>speed - east</name>
				<type>float</type>
				<node>/velocities/speed-east-fps</node>
			</chunk> 
			-->
			
			<chunk>
				<name>airspeed</name>
				<type>float</type>
				<node>/velocities/airspeed-kt</node>
				<factor>5.14</factor>
			</chunk> 

			<chunk>
				<name>groundspeed</name>
				<type>float</type>
				<node>/velocities/groundspeed-kt</node>
				<factor>5.14</factor>
			</chunk> 

			<chunk>
				<name>speed-down</name>
				<type>float</type>
				<node>/velocities/speed-down-fps</node>
				<factor>0.3048</factor>
			</chunk> 
			
			<!-- ##### IMU ##### -->
			<chunk>
				<name>x-accel</name>
				<type>float</type>
				<node>/accelerations/pilot/x-accel-fps_sec</node>
				<factor>0.3048</factor>
			</chunk>
			
			<chunk>
				<name>y-accel</name>
				<type>float</type>
				<node>/accelerations/pilot/y-accel-fps_sec</node>
				<factor>0.3048</factor>
			</chunk>
			
			<chunk>
				<name>z-accel</name>
				<type>float</type>
				<node>/accelerations/pilot/z-accel-fps_sec</node>
				<factor>0.3048</factor>
			</chunk>

			<chunk>
				<name>roll-rate</name>
				<type>float</type>
				<node>/orientation/roll-rate-degps</node>
			</chunk> 
			
			<chunk>
				<name>pitch-rate</name>
				<type>float</type>
				<node>/orientation/pitch-rate-degps</node>
			</chunk> 
			
			<chunk>
				<name>yaw-rate</name>
				<type>float</type>
				<node>/orientation/yaw-rate-degps</node>
			</chunk> 

			<chunk>
				<name>roll</name>
				<type>float</type>
				<node>/orientation/roll-deg</node>
			</chunk> 

			<chunk>
				<name>pitch</name>
				<type>float</type>
				<node>/orientation/pitch-deg</node>
			</chunk> 

		</output>
	</generic>
</PropertyList>
